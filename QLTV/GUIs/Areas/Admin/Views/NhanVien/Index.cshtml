@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}

<h2>Index</h2>
    @ViewBag.thongbao
<p>
    @Html.ActionLink("Create New", "Create")
    <br />
    <label>Ten nhan vien</label>
    <input type="text" placeholder="Ten Nhan Vien" id="tennhanvien"/>
    <button class="btn btn-primary" id="search">Tim kiem</button>
</p>
<table class="table">
    <tr>
        <th>
            TT
        </th>
        <th>
            Tên nhân viên
        </th>
        <th>
            Email
        </th>
        <th>
            Số ĐT
        </th>
        <th>
            Chinh Sua
        </th>
        <th>Xoa </th>
    </tr>
    <tbody id="tbData">
        
    </tbody>
   
    

</table>
@section scripts{
<script>
    

    var nhanvien = {
        init: function () {
            nhanvien.search();
            $("#search").click(function () {
                nhanvien.search();
            });
        },
        search: function () {
            var tennhanvien = $("#tennhanvien").val();
            var form = new FormData()
            form.append("ten",tennhanvien);

           $.ajax({
                type: 'POST',
               dataType: 'Json',
               contentType: false,
               processData: false,
               data: form,
               url: '/Admin/Nhanvien/Search/',
               success: function (res) {
                   $("#tbData").html(res.data);
                  
               },            
            });
        }
    }
    nhanvien.init();
        
</script>
    }